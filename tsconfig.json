{
	"compilerOptions": {
		"baseUrl": "./src",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "commonjs",
    "moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "dist",
    "resolveJsonModule": true,
		"paths": {
      "@/*": ["./*"],
			"*": [
				"node_modules/*",
				"types/*"
			]
		},
		"pretty": true,
    "skipLibCheck": true,
		"strictNullChecks": true,
		"target": "esnext",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": ["node_modules", "src/**/*.deprecated"],
	"include": ["src/**/*"]
}
